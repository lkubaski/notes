<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kubaski.notes" version="1.0.0" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Notes</name>
    <description>
        A Notes app
    </description>
    <author email="laurent.kubaski@gmail.com" href="http://kubaski.com">
        Laurent Kubaski
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
        <icon height="180" src="/resources/icon-60@3x.png" width="180"/>
        <icon height="120" src="/resources/icon-60@2x.png" width="120"/>
        <icon height="40" src="/resources/Icon-Small-40.png" width="40"/>
        <icon height="80" src="/resources/Icon-Small-40@2x.png" width="80"/>
        <icon height="120" src="/resources/Icon-Small-40@3x.png" width="120"/>
        <icon height="29" src="/resources/Icon-Small.png" width="29"/>
        <icon height="58" src="/resources/Icon-Small@2x.png" width="58"/>
        <icon height="87" src="/resources/Icon-Small@3x.png" width="87"/>
        <splash src="/resources/Default@2x~universal~anyany.png"/>
    </platform>
    <preference name="scheme" value="app" />
    <preference name="hostname" value="localhost" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false"/>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="BackgroundColor" value="#000000"/>
    <preference name="KeyboardShrinksView" value="true"/>
</widget>
